@model List<Product>

<h1>Product List</h1>

<a asp-action="Add">Add Product</a>

<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
            </tr>
        }
    </tbody>
</table>
